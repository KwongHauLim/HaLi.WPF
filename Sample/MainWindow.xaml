<Window x:Class="Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sample"
        xmlns:hali="clr-namespace:HaLi.WPF.UI;assembly=HaLi.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" Loaded="OnLoaded">
    <Grid>

        <Canvas Margin="175,114,0,0">
            <Rectangle x:Name="uiBlock" Fill="red" Width="80" Height="80" Canvas.Left="100" Canvas.Top="100"/>
        </Canvas>
        <hali:Joystick x:Name="uiMover" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Gray" Target="{Binding ElementName=uiBlock, Mode=OneWay}"  Anywhere="True"/>
    </Grid>
</Window>
